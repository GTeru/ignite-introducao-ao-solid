{
    "openapi": "3.0.0",
    "info": {
        "title": "Atlas",
        "description": "Essa é uma documentação sobre a Atlas API.",
        "version": "1.0.0",
        "contact": {
            "email": "gmteruya@hotmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Cria um novo usuário.",
                "requestBody": {
                    "description": "Conteudo obrigatórios para criaçao de um usuário.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Rocketseat",
                                    "email": "oi@rocketseat.com.br"
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Operação realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "admin": false,
                                        "id": "abcd1234-01cd-12sd-23sa-sd239dkckk",
                                        "name": "Rocketseat",
                                        "email": "oi@rocketseat.com.br",
                                        "created_at": "2021-03-10T22:10:12.002Z",
                                        "updated_at": "2021-04-22T10:02:21.000Z"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email já está sendo atualizado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "error": "This email is already in use"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Users"
                ],
                "description": "Somente usuário ```admin``` pode acessar.",
                "summary": "Retorna todos os usuários.",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "admin": {
                                                "type": "boolean"
                                            },
                                            "id": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "create_at": {
                                                "type": "string"
                                            },
                                            "updated_at": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "example": [
                                    {
                                        "admin": true,
                                        "id": "abcd1234-01cd-12sd-23sa-sd239dkckk",
                                        "name": "Rocketseat",
                                        "email": "oi@rocketseat.com.br",
                                        "created_at": "2021-03-10T22:10:12.002Z",
                                        "updated_at": "2021-04-22T10:02:21.000Z"
                                    },
                                    {
                                        "admin": false,
                                        "id": "sk8cnd21-9sdn-12sd-23sa-45nxcv2p",
                                        "name": "Gustavo Teruya",
                                        "email": "gmteruya@hotmail.com",
                                        "created_at": "2021-03-10T22:10:12.002Z",
                                        "updated_at": "2021-04-22T10:02:21.000Z"
                                    }
                                ]
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário sem permissão ou Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "You need to be an administrator to list all users."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Retorna usuário específico.",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "required": true,
                        "description": "ID do usuário",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "create_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "admin": true,
                                    "id": "abcd1234-01cd-12sd-23sa-sd239dkckk",
                                    "name": "Rocketseat",
                                    "email": "oi@rocketseat.com.br",
                                    "created_at": "2021-03-10T22:10:12.002Z",
                                    "updated_at": "2021-04-22T10:02:21.000Z"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário sem permissão ou Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "User not found"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "Users"
                ],
                "summary": "Torna admin um usuário",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "required": true,
                        "description": "ID do usuário",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses":{
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "create_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "admin": true,
                                    "id": "abcd1234-01cd-12sd-23sa-sd239dkckk",
                                    "name": "Rocketseat",
                                    "email": "oi@rocketseat.com.br",
                                    "created_at": "2021-03-10T22:10:12.002Z",
                                    "updated_at": "2021-04-22T10:02:21.000Z"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário sem permissão ou Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "error": "User not found"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}